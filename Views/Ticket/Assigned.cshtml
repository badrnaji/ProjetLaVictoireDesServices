@{
    ViewData["Title"] = "Attribué Ticket";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Attribué Ticket</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="dashboard" asp-action="index"><i class="fa fa-dashboard"></i>Home</a></li>
                    <li class="breadcrumb-item active"><a href="#"></a>Attribué Ticket</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                @if (ViewBag.msg != null)
                {
                    if (ViewBag.msg == "Done")
                    {
                        <div class="callout callout-success">
                            <h5>Successful</h5>
                        </div>

                    }
                    else
                    {
                        <div class="callout callout-danger">
                            <h5>Failed</h5>
                        </div>
                    }
                }

                <div class="card">
                    <div class="card-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Numero</th>
                                    <th>Titre</th>
                                    <th>Nom de l'employe</th>
                                    <th>Periode</th>
                                    <th>Statut</th>
                                    <th>Categorie</th>
                                    <th>creer</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var ticket in ViewBag.tickets)
                                {
                                    <tr>
                                        <td>#@ticket.Id</td>
                                        <td>@ticket.Title</td>
                                        <td>@ticket.Employee.NomComplet</td>
                                        <td><span class="badge badge-@ticket.Periode.Couleur">@ticket.Periode.Nom</span></td>
                                        <td><span class="badge badge-@ticket.Statut.Couleur">@ticket.Statut.Nom</span></td>
                                        <td>@ticket.Categorie.Nom</td>
                                        <td>@ticket.CreerDate.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <a asp-controller="ticket" asp-action="details"
                                               asp-route-id="@ticket.Id">Détails</a>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Numero</th>
                                    <th>Titre</th>
                                    <th>Nom de l'employe</th>
                                    <th>Periode</th>
                                    <th>Statut</th>
                                    <th>Categorie</th>
                                    <th>creer</th>
                                    <th>Action</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                </div>

            </div>

        </div>

    </div>

</section>

<script>
    $(function () {
        $('#example2').DataTable({
            "paging": true,
            "autoWidth": false
        });
    });
</script>