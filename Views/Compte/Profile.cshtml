
@{
    ViewData["Title"] = "Compte Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model ProjetLaVictoireDesServices.Models.Compte

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Compte Profile</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="dashboard" asp-action="index"><i class="fa fa-dashboard"></i>Home</a></li>
                    <li class="breadcrumb-item active"><a href="#"></a>Compte Profile</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">

            <div class="col-md-12">

                @if (ViewBag.msg != null)
                {
                    if (ViewBag.msg == "Done")
                    {
                        <div class="callout callout-success ">
                            <h5>Successful</h5>
                        </div>

                    }
                    else
                    {
                        <div class="callout callout-danger">
                            <h5>Failed</h5>
                        </div>
                    }
                }

                <div class="card card-primary">

                    <form asp-controller="compte" asp-action="profile" method="post">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="username">Nom D'utilisateur</label>
                                <input type="text" class="form-control" id="username" required="required"
                                       asp-for="NomUtilisateur" readonly="readonly">
                            </div>

                            <div class="form-group">
                                <label for="password">Password</label>
                                <input type="password" class="form-control" id="password"  asp-for="Password">
                            </div>


                            <div class="form-group">
                                <label for="fullname">Nom Complet</label>
                                <input type="text" class="form-control" id="fullname" required="required" asp-for="NomComplet">
                            </div>

                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" class="form-control" id="email" required="required" asp-for="Email">
                            </div>

                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Enregistrer</button>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</section>